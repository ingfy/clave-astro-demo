---
import { Code } from "astro:components";
import ReactCounter from "../components/Counter.tsx";
import SvelteCounter from "../components/Counter.svelte";
import Layout from "../layouts/Layout.astro";
import NavigatorInfo from "../components/NavigatorInfo.tsx";
---

<Layout title="Frontendrammeverk üñº">
  <p>Bruk hvilket frontendrammeverk du vil</p>
  <h2>React</h2>
  <Code
    lang="tsx"
    code={`import { useState } from "react";

export default function Counter() {
  const [count, setCount] = useState(0);

  const increment = () => setCount((prev) => prev + 1);

  return <button onClick={increment}>Count: {count}</button>;
}`}
  />
  <p>Kun SSG</p>
  <Code lang="astro" code="<ReactCounter />" />
  <ReactCounter />
  <p>Last inn klientkode med <Code code="client:load" inline />:</p>
  <Code lang="astro" code="<ReactCounter client:load />" />
  <ReactCounter client:load />
  <h2>Svelte</h2>
  <Code
    lang="svelte"
    code={`<script lang="ts">
  let count = 0;

  function handleClick(event: MouseEvent) {
    count += 1;
  }
</script>

<button on:click={handleClick}>
  count: {count}
</button>`}
  />
  <p>Kun SSG</p>
  <Code lang="astro" code="<SvelteCounter />" />
  <SvelteCounter />
  <p>Last inn klientkode med <Code code="client:load" inline />:</p>
  <Code lang="astro" code="<SvelteCounter client:load />" />
  <SvelteCounter client:load />
  <h2><Code lang="astro" code="client:only" inline /> ‚ùì</h2>
  <h3>Server</h3>
  <NavigatorInfo />
  <h3>Klient</h3>
  <NavigatorInfo client:only="react" />
</Layout>
